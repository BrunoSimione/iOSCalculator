<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- My Calculator Theme -->
    <style name="calc_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">10</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="calc_button.top_row">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="calc_button.end_column">
        <item name="android:background">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="calc_button.functions">
        <item name="android:background">@color/dark_red</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">30sp</item>
    </style>


</resources>
